<Window x:Class="ValueApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValueApp"
        mc:Ignorable="d"
            Title="ValueApp" Height="450" Width="800" Background="#C0C0C0" Icon="/logo.ico">
    <Grid>
        <StackPanel Margin="10">
            <Label Margin="50,20" Width="155" FontSize="30">ValueApp</Label>
            <DockPanel Width="700" Height="300">
                <StackPanel>
                    <DockPanel >
                        <TextBox Name="DriveBox" Width="200" Height="50" Margin="80,50,0,0"/>
                        <Label Width="80" Height="30" Margin="0,50,5,5" FontSize="15">مسیر فایل</Label>
                    </DockPanel>
                    <Button Width="200" Height="50" Margin="80,100" FontSize="20" Name="start" Click="Start_OnClick">شروع</Button>
                </StackPanel>

                <StackPanel>
                    <TextBox Width="200" Name="AddBox"  Height="120" Margin="75,40,50,0"></TextBox>
                    <Button Width="200" Name="Add" Click="Add_OnClick" Height="50" Margin="5,50,-20,0" FontSize="20">افزودن</Button>

                </StackPanel>

            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
